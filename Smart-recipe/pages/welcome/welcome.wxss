page {
  height: 100%;
  background-color: #b3d4db;
}

.welcome-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-img {
  width: 300rpx;
  height: 250rpx;
  margin-top: 160rpx;
  border-radius:25%;
}

.welcome-text {
  margin-top: 140rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.inner-container {
  margin-top: 150rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.entrance {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}
